# top-most EditorConfig file 告诉EditorConfig插件，这是根文件，不用继续往上查找
root = true

# Unix-style newlines with a newline ending every file 匹配文件格式
{*.{js,css}}

# 结尾换行符，可选"lf"、"cr"、"crlf"
end_of_line = lf

# 在文件结尾插入新行
insert_final_newline = true

# 缩进风格，可选"space"、"tab"
indent_style = space

# 缩进的空格数
indent_size = 2